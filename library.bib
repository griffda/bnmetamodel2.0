   issn = {0378-3839},
   journal = {Coastal Engineering},
   keywords = {Bayesian network,Coastal barriers,Disaster risk reduction measures,Early warning systems,Hazard assessment,Overwash},
   pages = {134-147},
   title = {Use of a Bayesian Network for coastal hazards, impact and disaster risk reduction assessment at a coastal barrier (Ria Formosa, Portugal)},
